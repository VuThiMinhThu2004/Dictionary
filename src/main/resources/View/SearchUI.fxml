                            <ImageView fitHeight="40.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../Images/icons8_delete_bin_64px.png" />
                            </ImageView>
                  </graphic>
                    </Button>
