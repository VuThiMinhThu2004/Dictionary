<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Dictionary.Controllers.Translation">
    <Pane prefHeight="149.0" prefWidth="900.0" styleClass="definition-wrapper">
        <Pane layoutX="185.0" layoutY="30.0" prefHeight="84.0" prefWidth="535.0" snapToPixel="false">
            <Label alignment="CENTER" layoutX="-14.0" prefHeight="84.0" prefWidth="535.0" snapToPixel="false" text="Are you trying to become a polyglot?">
                <font>
                    <Font name="System Bold" size="25.0" />
                </font>
            </Label>
        </Pane>
    </Pane>

    <AnchorPane layoutY="149.0" prefHeight="451.0" prefWidth="900.0" styleClass="border">
        <Pane prefHeight="68.0" prefWidth="833.0">
            <Label layoutX="59.0" layoutY="9.0" prefHeight="51.0" prefWidth="189.0" snapToPixel="false" text="Translate">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
                <graphic>
                    <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/icons8-learning-100.png" />
                    </ImageView>
                </graphic>
            </Label>
        </Pane>
        <Pane layoutX="117.0" layoutY="68.0" prefHeight="345.0" prefWidth="599.0" styleClass="definition-wrapper">
            <TextArea fx:id="SourceLanguage" layoutX="16.0" layoutY="84.0" onKeyReleased="#translateWord" prefHeight="246.0" prefWidth="284.0" style="-fx-border-color: #1D5D9B; -fx-effect: #1D5D9B;" styleClass="title" stylesheets="@../Style/Style.css" wrapText="true" />
            <TextArea fx:id="TranslationLanguage" editable="false" layoutX="300.0" layoutY="84.0" prefHeight="246.0" prefWidth="284.0" style="-fx-border-color: #1D5D9B; -fx-effect: #1D5D9B;" styleClass="title" stylesheets="@../Style/Style.css" wrapText="true" />
            <Pane layoutX="1.0" prefHeight="84.0" prefWidth="599.0" stylesheets="@../Style/Style.css">
                <ComboBox fx:id="targetLanguageComboBox" layoutX="368.0" layoutY="33.0" prefWidth="150.0" promptText="Vietnamese" style="visibility: #1D5D9B;" stylesheets="@../Style/Style.css" />
                <ComboBox fx:id="sourceLanguageComboBox" layoutX="69.0" layoutY="33.0" prefWidth="150.0" promptText="English" />
            </Pane>

            <Button fx:id="recordButton" layoutX="24.0" layoutY="287.0" mnemonicParsing="false" onAction="#handleRecording" prefHeight="36.0" prefWidth="44.0" styleClass="transparent-button" stylesheets="@../Style/Style.css">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
                <tooltip>
                    <Tooltip text="Mic" />
                </tooltip>
                <graphic>
                    <ImageView fitHeight="26.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/Mic.png" />
                    </ImageView>
                </graphic>
            </Button>

            <Button layoutX="68.0" layoutY="287.0" mnemonicParsing="false" onAction="#handleVoice" prefHeight="36.0" prefWidth="38.0" styleClass="transparent-button" stylesheets="@../Style/Style.css">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
                <tooltip>
                    <Tooltip text="Volume" />
                </tooltip>
                <graphic>
                    <ImageView fitHeight="25.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../Images/volume.png" />
                    </ImageView>
                </graphic>
            </Button>
        </Pane>
    </AnchorPane>
</AnchorPane>
